<form action="register" method="post">
  <div class="form-group">
    <label for="user_login">Username</label>
    <input type="user_login" class="form-control" id="user_login" name="user_login" pattern="[a-z0-9.-]{3,50}" required>
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" class="form-control" id="password" name="password" pattern="[a-z0-9_!@#$%^&*=+;:\\|<>,.?/`~{}[\]-\s]{8,}" required>
  </div>
  <div class="form-group">
    <label for="retypePassword">Retype password:</label>
    <input type="password" class="form-control" id="retypePassword" name="retypePassword" pattern="(?=.*[\d])(?=.*[!@#$%^&*])[\w!@#$%^&*]{8,}" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" class="form-control" id="email" name="email" required>
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" pattern="[+0-9]*">
  </div>
  <div class="form-group">
    <label for="address">Address</label>
    <input type="text" class="form-control" id="address" name="address">
  </div>
  <p>Already have an account? <a href='/user/login'>Login</a></p>
  
  <button type="submit" class="btn btn-default" name="submit" value='Submit'>Register for an account</button>
</form>