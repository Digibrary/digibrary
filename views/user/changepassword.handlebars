<form action="changepassword" method="post">
  <input type="hidden" name="_csrf" value="{{csrfToken}}">
  <div class="form-group">
    <label for="password">Old password:</label>
    <input type="password" class="form-control" id="password" name="password" required>
  </div>
  <div class="form-group">
    <label for="newPassword">New password:</label>
    <input type="password" class="form-control" id="newPassword" name="newPassword" pattern="[a-z0-9_!@#$%^&*=+;:\\|<>,.?/`~{}[\]-\s]{8,}" required>
  </div>
  <div class="form-group">
    <label for="retypeNewPassword">Retype new password:</label>
    <input type="password" class="form-control" id="retypeNewPassword" name="retypeNewPassword" pattern="(?=.*[\d])(?=.*[!@#$%^&*])[\w!@#$%^&*]{8,}" required>
  </div>
  
  <button type="submit" class="btn btn-default" name="submit" value='Submit'>Submit</button>
</form>